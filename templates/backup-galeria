<?php
require_once '../config.php';
require_once '../funciones.php';
$categoria_id = isset($_GET['categoria']) ? (int)$_GET['categoria'] : null;
$busqueda = isset($_GET['busqueda']) ? sanitize($_GET['busqueda']) : null;
$pagina = isset($_GET['pagina']) ? (int)$_GET['pagina'] : 1;
$limite = 9;
$offset = ($pagina - 1) * $limite;
$categorias = obtenerCategorias();
$articulos = obtenerArticulos($categoria_id, $limite, $offset, $busqueda);
$total_articulos = contarArticulos($categoria_id, $busqueda);
$total_paginas = ceil($total_articulos / $limite);
$categoria_actual = $categoria_id ? obtenerCategoriaPorId($categoria_id) : null;
$grid_limite = 6;
$grid_offset = ($pagina - 1) * $grid_limite;
$grid_articulos = obtenerArticulos($categoria_id, $grid_limite, $grid_offset, $busqueda);
$grid_total_paginas = max(1, ceil($total_articulos / $grid_limite));
?>
