    <script>
      jQuery(function($){
        $('.search-toggle').on('click', function(e){
          var selector = $(this).data('selector');
          $(selector).toggleClass('show').find('.search-input').focus();
          $(this).toggleClass('active');
          $('#searching').toggleClass('active');
          e.preventDefault();
        });
        var $container = $('#demo');
        var $carousel = $container.find('.cv-carousel');
        var itemsCount = $carousel.find('.item').length;
        var $hamb = $('#menu-es .btn-hamburger');
        var $mobile = $('#mobileMenu');
        var $items = $mobile.find('.mobile-menu-items');
        if($hamb.length){
          $hamb.on('click', function(e){ e.preventDefault(); $mobile.attr('hidden', false).addClass('show'); });
          $mobile.find('.mobile-menu-close').on('click', function(e){ e.preventDefault(); $mobile.removeClass('show').attr('hidden', true); });
          var $navLinks = $('#menu-es .nav.navbar-nav > li > a').clone();
          $items.empty();
          $navLinks.each(function(){ var href=$(this).attr('href'); var text=$(this).text(); $('<li><a></a></li>').appendTo($items).find('a').attr('href', href).text(text); });
          var $extras = $('.header-inscripciones a').clone();
          $extras.each(function(){ var href=$(this).attr('href'); var text=$(this).text(); $('<li><a></a></li>').appendTo($items).find('a').attr('href', href).text(text); });
        }
        if(itemsCount > 1){
          var animating = false;
          var interval = 4000;
          function setVisibleHeight(){
            var visible = Math.min(3, itemsCount);
            var $first = $carousel.find('.item').first();
            var h = $first.outerHeight(true);
            if(h && h > 0){
              var target = h * visible;
              $container.css('height', target);
              $carousel.parent().css({overflow:'hidden', height: target});
            }
          }
          function next(){
            if(animating) return;
            animating = true;
            var $first = $carousel.find('.item').first();
            var h = $first.outerHeight(true);
            $carousel.animate({marginTop: -h}, 500, function(){
              $carousel.css('marginTop', 0);
              $first.appendTo($carousel);
              animating = false;
            });
          }
          function prev(){
            if(animating) return;
            animating = true;
            var $last = $carousel.find('.item').last();
            var h = $last.outerHeight(true);
            $last.prependTo($carousel);
            $carousel.css('marginTop', -h);
            $carousel.animate({marginTop: 0}, 500, function(){
              animating = false;
            });
          }
          var timer = setInterval(next, interval);
          $('#cv-next').on('click', function(e){ e.preventDefault(); clearInterval(timer); next(); });
          $('#cv-prev').on('click', function(e){ e.preventDefault(); clearInterval(timer); prev(); });
          $container.on('mouseenter', function(){ clearInterval(timer); });
          $container.on('mouseleave', function(){ timer = setInterval(next, interval); });
          $carousel.parent().css({overflow:'hidden'});
          setVisibleHeight();
          $container.find('img').on('load', setVisibleHeight);
          $(window).on('resize', setVisibleHeight);
        }
      });
    </script>
